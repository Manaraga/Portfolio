<h1>Listing news</h1>

<table>
  
<% @news.each do |news| %>
  <tr class="<%= cycle('list_line-odd', 'list_line_even' ) %>">

	<td>
		<%= image_tag(news.image_url, class: 'list_image') %>
   </td>

   <td class="list_description">
		<dl>
			<dt><%= news.title %></dt>
    		<dd><%= truncate(strip_tags(news.description), length: 80) %></dd>
		</dl>
	</td>

	
    <td class="list_actions">
       <%= link_to 'Show', news %>
       <%= link_to 'Edit', edit_news_path(news) %>
       <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New News', new_news_path %>
