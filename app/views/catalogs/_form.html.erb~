<%= form_for @catalog, :html => {:multipart => true } do |f| %>
  <% if @catalog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@catalog.errors.count, "error") %> prohibited this catalog from being saved:</h2>

      <ul>
      <% @catalog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :side %><br />
    <%= f.text_field :side %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Тэги (через запятую)" %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :article1 %><br />
    <%= f.text_area :article1, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :content1 %><br />
    <%= f.text_area :content1 %>
  </div>
  <div class="field">
    <%= f.label :article2 %><br />
    <%= f.text_area :article2, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :content2 %><br />
    <%= f.text_area :content2 %>
  </div>
  <div class="field">
    <%= f.label :article3 %><br />
    <%= f.text_area :article3, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :content3 %><br />
    <%= f.text_area :content3 %>
  </div>
  
  <%= f.fields_for :assets do |asset_fields| %>
  <p>
	<%= asset_fields.file_field :asset %>
  </p>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
